{
	"name": "codemsg",
	"displayName": "CodeMsg",
	"description": "CodeMsg is an IPMsg compatible extension for Visual Studio Code",
	"version": "0.4.1",
	"publisher": "huangxiandong",
	"icon": "media/logo.png",
	"bugs": {
		"url": "https://github.com/huangxiandong/codemsg/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/huangxiandong/codemsg.git"
	},
	"license": "MIT",
	"author": "huangxiandong <huangxiandong@hotmail.com>",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"IPMsg",
		"IPMessenger",
		"FeiQ",
		"飞鸽",
		"飞鸽传书",
		"飞秋",
		"msg",
		"Message",
		"chat",
		"聊天"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "%codemsg.title%",
			"properties": {
				"codemsg.mode": {
					"type": "string",
					"description": "client mode",
					"enum": [
						"FeiQ",
						"IPMsg"
					],
					"default": "FeiQ",
					"order": 1
				},
				"codemsg.nickname": {
					"type": "string",
					"description": "%codemsg.nickname.desc%",
					"order": 2
				},
				"codemsg.group": {
					"type": "string",
					"description": "%codemsg.group.desc%",
					"order": 3
				},
				"codemsg.filelocation": {
					"type": "string",
					"description": "%codemsg.filelocation.desc%",
					"order": 4
				},
				"codemsg.networkList": {
					"type": "array",
					"description": "network list",
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"order": 5
				},
				"codemsg.favoriteList": {
					"type": "array",
					"description": "favorite contact",
					"items": {
						"type": "string"
					},
					"uniqueItems": true,
					"order": 6
				},
				"codemsg.useVscodeMsg": {
					"type": "boolean",
					"default": false,
					"description": "use vscode message",
					"order": 7
				},
				"codemsg.hisdays": {
					"type": "integer",
					"description": "history days",
					"default": 1,
					"order": 8
				},
				"codemsg.debug": {
					"type": "object",
					"order": 9,
					"description": "debug setting",
					"properties": {
						"entry": {
							"type": "boolean",
							"description": "登录消息"
						},
						"exit": {
							"type": "boolean",
							"description": "退出消息"
						},
						"absense": {
							"type": "boolean",
							"description": "absense"
						},
						"ansentry": {
							"type": "boolean",
							"description": "ansentry"
						}
					},
					"additionalProperties": false,
					"default": {}
				},
				"codemsg.encryption": {
					"type": "boolean",
					"description": "encrypt message or not",
					"default": true,
					"order": 9
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"build": "cd web && yarn build",
		"buildext": "vsce package",
		"package": "yarn build && yarn buildext",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"iconv-lite": "^0.6.3",
		"nedb": "^1.8.0",
		"node-rsa": "^1.1.1"
	}
}
